@using KDP_EC.Core.Models
@model Person

@{
    ViewData["Title"] = "Crear Persona";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg">
                
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0">Registro de Persona</h3>
                </div>

                <div class="card-body p-4">
                    <form asp-action="CreatePerson" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="IdentificationType" class="form-label">Tipo de Identificación</label>
                                    <select asp-for="IdentificationType" class="form-select" required>
                                        <option value="">Seleccione un Tipo</option>
                                        <option value="CC">Cédula de Ciudadanía</option>
                                        <option value="CE">Cédula de Extranjería</option>
                                        <option value="NIT">NIT</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Identification" class="form-label">Identificación</label>
                                    <input asp-for="Identification" class="form-control" required />
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Nombre</label>
                                    <input asp-for="Name" class="form-control" required />
                                </div>

                                <div class="mb-3">
                                    <label asp-for="LastName" class="form-label">Apellido</label>
                                    <input asp-for="LastName" class="form-control" required />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label">Teléfono</label>
                                    <input asp-for="Phone" class="form-control" required />
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label">Correo Electrónico</label>
                                    <input asp-for="Email" type="email" class="form-control" required />
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CountryId" class="form-label">País</label>
                                    <select asp-for="CountryId" class="form-select" asp-items="ViewBag.Countries" required>
                                        <option value="">Seleccione un país</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Gender" class="form-label">Género</label>
                                    <select asp-for="Gender" class="form-select" required>
                                        <option value="">Seleccione un género</option>
                                        <option value="M">Masculino</option>
                                        <option value="F">Femenino</option>
                                        <option value="N/A">No aplica</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid mt-3">
                            <button type="submit" class="btn btn-success rounded-pill">Siguiente</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>